{% set docNav = collections.documentation %}
<aside id="sidebar-multi-level-sidebar" class="top-0 left-0 z-40 w-64 h-screen transition-transform -translate-x-full sm:translate-x-0" aria-label="Sidebar">
   <div class="h-full px-3 py-4 overflow-y-auto bg-gray-50 dark:bg-gray-800">
      <ul class="space-y-2 font-medium">
        {% for doc in docNav %}
         <li>
            <a href="{{ doc.data.url }}" class="flex items-center p-2 text-gray-900 rounded-lg dark:text-white hover:bg-gray-100 dark:hover:bg-gray-700 group">
               <span class="ml-3">{{ doc.data.title }}</span>
            </a>
         </li>
        {% endfor %}
      </ul>
   </div>
</aside>
